{{!< default}}

<main id="main">
    <section class="p-outer">
        <div class="p-inner p-hero">
            <div class="p-hero-left">
                <div>
                    <h1>Welcome, Online Entrepreneurs ðŸ‘‹</h1>
                    <p>This is <strong><a href="https://ricsmo.com">ricsmo.com</a></strong>, and, as you may have
                        guessed, I'm Ric Smolenski (ricsmo for short).</p>
                    <p>I run online business <em>live</em> to help others do the same.</p>
                    <p>I've been earning income online for more than 25 years.</p>
                    <p>Join me in learning about online marketing, selling online courses, or whatever else I'm working
                        on at the moment.</p>
                </div>
                <div class="p-hero-buttons">
                    {{! Launches the Ghost membership portal }}
                    <button data-portal="signup">Subscribe</button>
                    {{! Link to an about page }}
                    <a href="/about/">Learn more &rarr;</a>
                </div>
            </div>
            <div class="p-hero-right">
                {{! Loads the your cover image as defined in Ghost admin }}
                <img src="{{img_url @site.cover_image size="l"}}" alt="ricsmo"/>
            </div>
        </div>
    </section>

    {{! First section}}
    <section class="p-outer">
        <div class="p-inner">
            <h2><a href="https://ricsmo.com/blog/">Blog</a></h2>
            <div class="p-posts-grid">
                {{! Use the get helper to fetch posts }}
                {{#get "posts" filter="primary_tag:blog" limit="6" }}
                {{! Use the foreach helper to loop through available posts }}
                    {{#foreach posts}}
                        <article class="p-post-card">
                            {{! Use the img_url helper to bring in the post's feature image. }}
                            <img src="{{img_url feature_image size="m"}}" alt="{{feature_image_alt}}"/>
                            <h3><a href="{{url}}">{{title}}</a></h3>
                        </article>
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="readmore">
                <a href="https://ricsmo.com/blog/">More...</a>
            </div>
        </div>
    </section>

    {{! Second section }}
    <section class="p-outer">
        <div class="p-inner">
            <h2><a href="https://ricsmo.com/reviews/">Reviews</a></h2>
            <div class="p-posts-grid">
                {{! Use the get helper to fetch posts }}
                {{#get "posts" filter="primary_tag:review" limit="6" }}
                {{! Use the foreach helper to loop through available posts }}
                    {{#foreach posts}}
                        <article class="p-post-card">
                            {{! Use the img_url helper to bring in the post's feature image. }}
                            <img src="{{img_url feature_image size="m"}}" alt="{{feature_image_alt}}"/>
                            <h3><a href="{{url}}">{{title}}</a></h3>
                        </article>
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="readmore">
                <a href="https://ricsmo.com/reviews/">More...</a>
            </div>
        </div>
    </section>
</main>